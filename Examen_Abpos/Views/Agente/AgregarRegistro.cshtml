@model Examen_Abpos.Models.DB.Actividad

@{
    ViewData["Title"] = "AgregarRegistro";
    Layout = "~/Views/Shared/_LayoutAgente.cshtml";
}

<h1 class="display-4">Agregar Registro</h1>
<hr class="my-4" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarRegistro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DuracionLlamada" class="control-label"></label>
                <input asp-for="DuracionLlamada" class="form-control" />
                <span asp-validation-for="DuracionLlamada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripLlamada" class="control-label"></label>
                <input asp-for="DescripLlamada" class="form-control" />
                <span asp-validation-for="DescripLlamada" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Resuelto" /> @Html.DisplayNameFor(model => model.Resuelto)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <select asp-for="IdUsuario" class ="form-control" asp-items="ViewBag.IdUsuario"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdTipo" class="control-label"></label>
                <select asp-for="IdTipo" class ="form-control" asp-items="ViewBag.IdTipo"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

