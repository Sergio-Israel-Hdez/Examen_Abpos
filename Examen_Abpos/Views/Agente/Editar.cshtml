@model Examen_Abpos.Models.DB.Actividad

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAgente.cshtml";
}
<h1 class="display-4">Editar Actividad</h1>
<hr  class="my-4"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdActividad" />
            <div class="form-group">
                <label asp-for="DuracionLlamada" class="control-label"></label>
                <input asp-for="DuracionLlamada" class="form-control" />
                <span asp-validation-for="DuracionLlamada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripLlamada" class="control-label"></label>
                <input asp-for="DescripLlamada" class="form-control" />
                <span asp-validation-for="DescripLlamada" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Resuelto" /> @Html.DisplayNameFor(model => model.Resuelto)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="IdTipo" class="control-label">Tipo Llamada</label>
                @Html.DropDownList("IdTipo", new SelectList(ViewBag.tipo_llamada, "IdTipo", "NombreTipo"))
                <span asp-validation-for="IdTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

